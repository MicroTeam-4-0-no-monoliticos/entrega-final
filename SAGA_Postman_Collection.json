    {
      "name": "SAGA Operations",
      "item": [
        {
          "name": "Crear SAGA Campaña Completa",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"campana\": {\n    \"nombre\": \"Campaña SAGA Test\",\n    \"tipo\": \"PROMOCIONAL\",\n    \"presupuesto\": {\n      \"monto\": 1000.0,\n      \"moneda\": \"USD\"\n    },\n    \"fecha_inicio\": \"2025-01-01T00:00:00\",\n    \"fecha_fin\": \"2025-12-31T23:59:59\",\n    \"id_afiliado\": \"afiliado_test\",\n    \"descripcion\": \"Campaña de prueba para SAGA\"\n  },\n  \"pago\": {\n    \"id_afiliado\": \"afiliado_test\",\n    \"monto\": 1000.0,\n    \"moneda\": \"USD\",\n    \"referencia_pago\": \"test_payment\"\n  },\n  \"reporte\": {\n    \"tipo_reporte\": \"metricas_generales\",\n    \"filtros\": {\n      \"fecha_inicio\": \"2025-01-01\",\n      \"fecha_fin\": \"2025-12-31\"\n    }\n  },\n  \"timeout_minutos\": 30\n}"
            },
            "url": {
              "raw": "http://localhost:8090/saga/crear-campana-completa",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8090",
              "path": ["saga", "crear-campana-completa"]
            }
          }
        },
        {
          "name": "Listar todas las SAGAs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8090/saga/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8090",
              "path": ["saga", ""]
            }
          }
        },
        {
          "name": "Obtener estado de SAGA específica",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8090/saga/{{saga_id}}/status",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8090",
              "path": ["saga", "{{saga_id}}", "status"],
              "variable": [
                {
                  "key": "saga_id",
                  "value": "REPLACE_WITH_ACTUAL_SAGA_ID",
                  "description": "ID de la SAGA obtenido de la respuesta de crear SAGA"
                }
              ]
            }
          }
        },
        {
          "name": "Eliminar SAGA",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "http://localhost:8090/saga/{{saga_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8090",
              "path": ["saga", "{{saga_id}}"],
              "variable": [
                {
                  "key": "saga_id",
                  "value": "REPLACE_WITH_ACTUAL_SAGA_ID",
                  "description": "ID de la SAGA a eliminar"
                }
              ]
            }
          }
        }
      ]
    },
